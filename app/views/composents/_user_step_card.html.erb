<div class="card-user-step">
  <p><%= l(user_step.created_at, format: "%e %b %Y", locale: 'en') %></p>
  <ul>
    <% user_step.files.each do |file| %>
      <li>
        <%= link_to cl_image_path(file.key), download: file.blob.filename.to_s do %>
          <%= file.blob.filename.to_s %>
        <% end %>
      </li>
    <% end %>
  </ul>
  <%= simple_form_for(user_step) do |f| %>
    <%= f.input :files, as: :file, input_html: { multiple: true } %>
    <%= f.submit 'Sauvegarder' %>
  <% end %>
</div>
