<% @steps.each do |step| %>
  <div class="d-flex justify-content-center">
    <div class="list-group">
      <a href="#" class="list-group-item list-group-item-action activecard text-center" style="width: 18rem;" aria-current="true">
      </a>
        <%= link_to  step_path(step) do %>
        <%= render "composents/step_card", step: step %>
        <% end %>
    </div>
  </div>
<% end %>
